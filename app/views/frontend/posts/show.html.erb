<div class="container">
  <div class="row">
    <div class="box">
      <%= render partial: "post", object: @post %>

      <div class="col-lg-12 text-center">
        <%= render partial: "disqus_comments", locals: {
          identifier: @post.slug,
          title: @post.title,
          url: post_url(@post.slug)
        } %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "disqus_comments_count" %>
