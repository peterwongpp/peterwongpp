<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Posts</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Posts
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <%= content_tag :table,
            class: "table table-striped table-bordered table-hover data-table", data: { "ppdt-url" => tablized_backend_posts_path } do %>
            <thead>
              <tr>
                <%= content_tag :th, "ID", data: {
                  "ppdt-column" => "id"
                } %>
                <%= content_tag :th, "Slug", data: {
                  "ppdt-column" => "slug"
                } %>
                <%= content_tag :th, "Title", data: {
                  "ppdt-column" => "title"
                } %>
                <%= content_tag :th, "Tags", data: {
                  "ppdt-column" => "tags",
                  "ppdt-orderable" => false
                } %>
                <%= content_tag :th, "Published At", data: {
                  "ppdt-column" => "published_at"
                } %>
              </tr>
            </thead>
          <%- end %>
        </div>
      </div>
    </div>
  </div>
</div>
