<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Posts</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Posts
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <th>ID</th>
            <th>Title</th>
            <th>Tags</th>
            <th>Published At</th>
            <th>Created At</th>
          </thead>
          <tfoot>
            <th colspan="6" class="text-center">
              <%= paginate @posts, theme: "backend" %>
            </th>
          </tfoot>
          <tbody>
            <%- @posts.each do |post| %>
              <tr>
                <td><%= post.id %></td>
                <td><%= link_to post.title, post_url(post.slug) %></td>
                <td><%= post.tags.join(", ") %></td>
                <td><%= l(post.published_at, format: :short) %></td>
                <td><%= l(post.created_at, format: :short) %></td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
