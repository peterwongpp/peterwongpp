<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Users</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Users
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <th>ID</th>
            <th>Identity</th>
            <th>Name</th>
            <th>Email</th>
            <th>Created At</th>
          </thead>
          <tfoot>
            <th colspan="6" class="text-center">
              <%= paginate @users, theme: "backend" %>
            </th>
          </tfoot>
          <tbody>
            <%- @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.user_identities.map(&:provider).to_sentence %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= l(user.created_at, format: :short) %></td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
