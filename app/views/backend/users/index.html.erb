<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Users</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        Users
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <%= content_tag :table,
            class: "table table-striped table-bordered table-hover data-table", data: { "ppdt-url" => tablize_backend_users_path } do %>
            <thead>
              <tr>
                <%= content_tag :th, "ID", data: {
                  "ppdt-column" => "id"
                } %>
                <%= content_tag :th, "Identity", data: {
                  "ppdt-column" => "identity",
                  "ppdt-orderable" => false
                } %>
                <%= content_tag :th, "Name", data: {
                  "ppdt-column" => "name"
                } %>
                <%= content_tag :th, "Email", data: {
                  "ppdt-column" => "email"
                } %>
                <%= content_tag :th, "Created At", data: {
                  "ppdt-column" => "created_at"
                } %>
              </tr>
            </thead>
          <%- end %>
        </div>
      </div>
    </div>
  </div>
</div>
