<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Sign In</h2>
        <hr>
      </div>

      <div class="col-lg-4 col-lg-offset-4 text-center">
        <%- unless Rails.env.production? %>
          <div class="text-left">
            <%= form_tag "/auth/developer/callback", method: "post" do %>
              <fieldset>
                <legend>Developer Sign In</legend>
                <div class="row">
                  <div class="form-group col-lg-12">
                    <%= label_tag "Name" %>
                    <%= text_field_tag "name", "", class: "form-control", autofocus: true %>
                  </div>
                  <div class="form-group col-lg-12">
                    <%= label_tag "Email" %>
                    <%= text_field_tag "email", "", class: "form-control" %>
                  </div>
                  <div class="form-group col-lg-12">
                    <button type="submit" class="btn btn-default">Sign in</button>
                  </div>
                </div>
              </fieldset>
            <%- end %>
          </div>
        <%- end %>

        <%= oauth_button("facebook", "Facebook") %>
      </div>
    </div>
  </div>
</div>
